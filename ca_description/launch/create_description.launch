<?xml version="1.0"?>
<launch>
  <arg name="model" default="$(find ca_description)/urdf/create_2.urdf.xacro"/>

  <arg name="visualize" default="false"/>
  <arg name="rviz" default="false"/>
  <arg name="gpu" default="false"/>

  <!-- Robot description -->
  <arg name="xacro_args" value="visualize:=$(arg visualize) gpu:=$(arg gpu)"/>
	<param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model) $(arg xacro_args)" />
  <!-- Robot state publisher-->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen" />

  <!-- RViz -->
  <include if="$(arg rviz)" file="$(find ca_tools)/launch/rviz.launch">
    <arg name="config_file" value="$(find ca_description)/rviz/robot_description.rviz"/>
  </include>
</launch>
